{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "swarm",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true
    },
    "include": ["swarm/**/*"],
    "exclude": ["node_modules", "dist"]
}
